<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editDistance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/round_et"
        android:gravity="center"
        android:hint="@string/distancia"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorDarkGrey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="Total de Quilômetros"
        android:textAllCaps="true"
        android:textColor="@color/colorDarkGrey"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/editPrice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/round_et"
        android:gravity="center"
        android:hint="@string/preco"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorDarkGrey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="Preço por litro"
        android:textAllCaps="true"
        android:textColor="@color/colorDarkGrey"
        android:textSize="10sp" />


    <EditText
        android:id="@+id/editAutonomy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/round_et"
        android:gravity="center"
        android:hint="@string/autonomia"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorDarkGrey" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="KMS por litro"
        android:textAllCaps="true"
        android:textColor="@color/colorDarkGrey"
        android:textSize="10sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Seu gasto total será de ?"
        android:textAllCaps="true"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="R$ 0, 00"
        android:textAllCaps="true"
        android:textColor="@color/lightRed"
        android:textSize="30sp" />


    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calcular" />

</LinearLayout>